<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="10dp"

        android:gravity="center_vertical">


        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/msg_out"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            tools:text="Hello bubbles hfghjhfj gjgjgj gjgkkgk gjgjgj gjgjgjgjgjj gjgj gjg jgjgjj!"
android:layout_toLeftOf="@+id/image_view"
            android:textColor="@android:color/primary_text_light" />



        <ImageView android:id="@+id/edit"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/edit_img"
            android:layout_toLeftOf="@+id/image_view"
            android:layout_alignParentBottom="true"
            />
        <com.sample.chatbotlib.CircleImageView
            android:id="@+id/image_view"
            android:layout_width="54dp"
            android:layout_height="54dp"
            app:border_width="2dp"
            android:layout_centerVertical="true"
           android:layout_alignParentRight="true"
            app:border_color="@android:color/white"
            android:src="@drawable/user_placeholder"/>
    </RelativeLayout>

</LinearLayout>